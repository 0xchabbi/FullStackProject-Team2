{% extends 'base.html.twig' %}



{% block body %}

        <div class="container py-4">

            <div id="recimg" class="card">
                <div class="card-body">
                  <h5 class="card-title text-center">{{dish.dish_name}}</h5>
                </div>
                <img src="{{ asset( 'img/dishes/' ~ dish.image) }}" class="card-img-bottom" alt="...">
              </div>


            <div class="row">
                <div class="col-sm-4">
                  <div id="det" class="card">
                    <div class="card-body">
                      <h5 class="card-title">Ingredients</h5>
                      <p class="card-text">{{dish.ingredients}}</p>
                    </div>
                  </div>
                </div>
                <div class="col-sm-8">
                  <div id="det" class="card">
                    <div class="card-body">
                      <h5 class="card-title">How to prepare</h5>
                      <p class="card-text">{{dish.recipe}}</p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row mt-3 mb-4">
                <div class="col-sm-6">
                  <div id="det" class="card">
                    <div class="card-body">
                      <h5 class="card-title">Nutrition</h5>
                      <h6>Values: {{dish.nutrition_facts}}</h6> 
                      <h6>Calories: {{dish.calories}}</h6>                   
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div id="det" class="card">
                    <div class="card-body">
                      <h6>Type:</h6>
                      <h6>Category: {{dish.category}}</h6> 
                      <h6>Status: {{dish.dish_status}}</h6>                  
                    </div>
                  </div>
                </div>
              </div>

        <a href="/" class="btn btn-primary">Back to the Dishes</a>
         </div>
{% endblock %}