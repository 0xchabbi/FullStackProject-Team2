{% extends 'base.html.twig' %}



{% block body %}
<div class="container text-center">
<div class=" mb-5 col col-12 d-flex align-items-stretch">
        <div class="row g-1 container-fluid card shadow-lg bg-card-color">
        <img src={{dish.image}} class="card-img-top" alt="...">
        <div class="card-body">
          <h4 class="card-title">{{dish.dish_name}}</h4>
          <hr>
          <p class="card-text">{{dish.description}}</p>
          <p class="card-text">{{dish.type}}</p>
          <p class="card-text">{{dish.nutrition_facts}}</p>
          <p class="card-text">{{dish.ingredients}}</p>
          <p class="card-text">{{dish.recipe}}</p>
          <p class="card-text">{{dish.category}}</p>
          <p class="card-text">{{dish.calories}}</p>
          <p class="card-text">{{dish.dish_status}}</p>
       <a href="/" class="btn btn-primary">Back to the Dishes</a>
        </div>
        </div>
        </div>
        </div>
{% endblock %}